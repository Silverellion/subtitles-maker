<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="subtitles_maker.MainWindow"
        Title="subtitles_maker"
        Background="rgb(30,30,30)"
        Width="1000" Height="600"
        MinWidth="500" MinHeight="300"
        FontFamily="Inter">

    <Grid RowDefinitions="Auto,Auto,1*,Auto" ColumnDefinitions="*">
        <Grid Grid.Row="0" Margin="40,30,40,0">
            <TextBox x:Name="ModelPathTextBox"
                     Text="C:\subtitles-maker\models\ggml-large-v3-turbo.bin"
                     Background="rgb(30,30,30)"
                     Foreground="rgb(255,255,255)"
                     CornerRadius="4"
                     FontSize="14"
                     Padding="10"
                     BorderBrush="rgb(80,80,80)"
                     BorderThickness="1">
                <TextBox.InnerRightContent>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <Button x:Name="OpenModelFolderButton" 
                                Width="40" Height="40" 
                                Margin="0,0,5,0"
                                Background="Transparent"
                                BorderThickness="0"
                                ToolTip.Tip="Open model folder">
                            <Image Source="avares://subtitles-maker/assets/icons/folder-open.png" Width="24" Height="24"/>
                        </Button>

                        <Button x:Name="ChooseNewModelButton" 
                                Width="40" Height="40" 
                                Margin="0,0,5,0"
                                Background="Transparent"
                                BorderThickness="0"
                                ToolTip.Tip="Choose new model">
                            <Image Source="avares://subtitles-maker/assets/icons/folder-new.png" Width="24" Height="24"/>
                        </Button>

                    </StackPanel>
                </TextBox.InnerRightContent>
            </TextBox>
        </Grid>

        <Grid Grid.Row="1" Margin="40,10,40,0">
            <TextBox x:Name="OutputPathTextBox"
                     Text="C:\subtitles-maker\output"
                     Background="rgb(30,30,30)"
                     Foreground="rgb(255,255,255)"
                     CornerRadius="4"
                     FontSize="14"
                     Padding="10"
                     BorderBrush="rgb(80,80,80)"
                     BorderThickness="1">

                <TextBox.InnerRightContent>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <Button x:Name="OpenOutputFolderButton" 
                                Width="40" Height="40" 
                                Margin="0,0,5,0"
                                Background="Transparent"
                                BorderThickness="0"
                                ToolTip.Tip="Open output folder">
                            <Image Source="avares://subtitles-maker/assets/icons/folder-open.png" Width="24" Height="24"/>
                        </Button>

                        <Button x:Name="ChooseNewOutputFolderButton" 
                                Width="40" Height="40" 
                                Margin="0,0,5,0"
                                Background="Transparent"
                                BorderThickness="0"
                                ToolTip.Tip="Choose new output folder">
                            <Image Source="avares://subtitles-maker/assets/icons/folder-new.png" Width="24" Height="24"/>
                        </Button>

                    </StackPanel>
                </TextBox.InnerRightContent>
            </TextBox>
        </Grid>

        <Grid Grid.Row="2" Margin="40,20,40,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="rgb(30,30,30)"
                    CornerRadius="4"
                    BorderBrush="rgb(80,80,80)"
                    BorderThickness="1"
                    Margin="0,0,10,0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="+" 
                               FontSize="32" 
                               Foreground="rgb(255,255,255)"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Drag Your mp3/mp4 or folder containing them here"
                               FontSize="14"
                               Foreground="rgb(200,200,200)"
                               Margin="0,20,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <ComboBox Grid.Column="1"
                      VerticalAlignment="Top"
                      Margin="0,0,0,0"
                      Height="40"
                      HorizontalAlignment="Stretch"
                      Background="rgb(30,30,30)"
                      Foreground="rgb(255,255,255)"
                      BorderBrush="rgb(80,80,80)"
                      BorderThickness="1"
                      SelectedIndex="0">

                <ComboBoxItem Content="English"/>
                <ComboBoxItem Content="French"/>
                <ComboBoxItem Content="German"/>
                <ComboBoxItem Content="Japanese"/>
                <ComboBoxItem Content="Spanish"/>
            </ComboBox>
        </Grid>

        <Border Grid.Row="3"
                Margin="40,10,40,30"
                Background="rgb(0,0,0)"
                CornerRadius="4"
                BorderBrush="rgb(80,80,80)"
                BorderThickness="1"
                Height="140">
            <DockPanel LastChildFill="True">

                <TextBlock Text="Terminal log" 
                           Foreground="rgb(255,255,255)"
                           FontSize="14"
                           FontFamily="Consolas"
                           Padding="10,10,0,0"
                           DockPanel.Dock="Top"/>

                <TextBox x:Name="TerminalLogTextBox"
                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True"
                         Foreground="rgb(200,200,200)"
                         FontFamily="Consolas"
                         Padding="10,5,10,10"
                         Margin="0"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         AcceptsReturn="True"/>

            </DockPanel>
        </Border>
    </Grid>
</Window>