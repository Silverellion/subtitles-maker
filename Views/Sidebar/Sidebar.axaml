<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="subtitles_maker.Views.Sidebar.Sidebar"
             Width="50"
             MinWidth="50"
             Background="Transparent">

    <UserControl.Transitions>
        <Transitions>
            <DoubleTransition Property="Width" Duration="0:0:0.22" Easing="CubicEaseOut" />
        </Transitions>
    </UserControl.Transitions>

    <Border x:Name="Root" Background="rgb(0,0,0)" Padding="10" CornerRadius="8">
        <StackPanel Spacing="18" HorizontalAlignment="Left" VerticalAlignment="Stretch">

            <Button 
                x:Name="MenuButton"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                ToolTip.Tip="Expand"
                HorizontalAlignment="Left"
                Padding="6">
                <StackPanel>
                    <Image 
                        Source="avares://subtitles-maker/assets/icons/menu.png" 
                        Width="30"
                        Height="30"/>
                </StackPanel>
            </Button>

            <StackPanel Orientation="Vertical" Spacing="8" HorizontalAlignment="Left">
                <Button 
                    x:Name="HomeButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip.Tip="Home"
                    HorizontalAlignment="Left"
                    Padding="6">

                    <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <Image 
                            Source="avares://subtitles-maker/assets/icons/home.png" 
                            Width="30"
                            Height="30"/>
                        <TextBlock 
                            x:Name="HomeLabel" 
                            Foreground="White" 
                            VerticalAlignment="Center" 
                            FontSize="16" 
                            Text="Home" 
                            Opacity="0">
                            <TextBlock.Transitions>
                                <Transitions>
                                    <DoubleTransition Property="Opacity" Duration="0:0:0.18" />
                                </Transitions>
                            </TextBlock.Transitions>
                        </TextBlock>
                    </StackPanel>
                </Button>

                <Button 
                    x:Name="ModelsButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip.Tip = "Models"
                    HorizontalAlignment="Left"
                    Padding="6">
                    <StackPanel 
                        Orientation="Horizontal" 
                        Spacing="10" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">
                        <Image 
                            Source="avares://subtitles-maker/assets/icons/layers.png" 
                            Width="30"
                            Height="30"/>
                        <TextBlock 
                            x:Name="ModelsLabel" 
                            Foreground="White" 
                            VerticalAlignment="Center" 
                            FontSize="16" 
                            Text="Models" 
                            Opacity="0">

                            <TextBlock.Transitions>
                                <Transitions>
                                    <DoubleTransition Property="Opacity" Duration="0:0:0.18" />
                                </Transitions>
                            </TextBlock.Transitions>
                        </TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>