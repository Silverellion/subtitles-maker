<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="subtitles_maker.Views.Home.HomeView"
             Background="transparent">

    <Grid RowDefinitions="Auto,Auto,1*,0.5*" ColumnDefinitions="*">
        <ComboBox
            Grid.Row="0"
            Margin="40,30,40,0"
            x:Name="ModelPathComboBox"
            HorizontalAlignment="Stretch"
            Background="rgb(30,30,30)"
            Foreground="rgb(255,255,255)"
            BorderBrush="rgb(80,80,80)"
            BorderThickness="1"
            CornerRadius="4"
            FontSize="14"
            Padding="10"
            MinHeight="40"
            Cursor="Hand"
            SelectedIndex="-1"
            ToolTip.Tip="Select or download a model for transcription">
        </ComboBox>

        <Grid Grid.Row="1" Margin="40,10,40,0">
            <TextBox 
                x:Name="OutputPathTextBox"
                Watermark="Select output folderâ€¦"
                Background="rgb(30,30,30)"
                Foreground="rgb(255,255,255)"
                CornerRadius="4"
                FontSize="14"
                Padding="10"
                BorderBrush="rgb(80,80,80)"
                BorderThickness="1">

                <TextBox.InnerRightContent>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <Button 
                            x:Name="OpenOutputFolderButton" 
                            Width="40" Height="40" 
                            Margin="0,0,5,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip.Tip="Open output folder">
                            <Image
                                Source="avares://subtitles-maker/assets/icons/folder-open-50.png"
                                Width="24"
                                Height="24"/>
                        </Button>

                        <Button 
                            x:Name="ChooseNewOutputFolderButton" 
                            Width="40" Height="40" 
                            Margin="0,0,5,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip.Tip="Choose new output folder">
                            <Image 
                                Source="avares://subtitles-maker/assets/icons/folder-new-50.png" 
                                Width="24" 
                                Height="24"/>
                        </Button>

                    </StackPanel>
                </TextBox.InnerRightContent>
            </TextBox>
        </Grid>

        <Grid Grid.Row="2" Margin="40,20,40,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <Button 
                x:Name="DropZoneButton"
                Grid.Column="0"
                Background="rgb(30,30,30)"
                CornerRadius="4"
                Margin="0,0,10,0"
                Cursor="Hand"
                Padding="0"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                ToolTip.Tip="Click or drag audio files here to upload">

                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="rgb(50,50,50)" />
                        <Setter Property="BorderBrush" Value="rgb(100,100,100)" />
                    </Style>
                    <Style Selector="Button:pressed">
                        <Setter Property="Background" Value="rgb(40,40,40)" />
                    </Style>
                </Button.Styles>

                <Border 
                    x:Name="DropZone"
                    Background="Transparent"
                    BorderBrush="rgb(80,80,80)"
                    BorderThickness="1"
                    CornerRadius="4">

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock 
                            Text="+" 
                            FontSize="50" 
                            Foreground="rgb(255,255,255)"
                            HorizontalAlignment="Center"/>

                        <TextBlock 
                            Text="Click to select or drag your mp3/mp4 files here"
                            FontSize="14"
                            Foreground="rgb(200,200,200)"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Button>

            <ComboBox 
                x:Name="LanguageComboBox"
                Grid.Column="1"
                VerticalAlignment="Top"
                Margin="0,0,0,0"
                Height="40"
                HorizontalAlignment="Stretch"
                Background="rgb(30,30,30)"
                Foreground="rgb(255,255,255)"
                BorderBrush="rgb(80,80,80)"
                BorderThickness="1"
                Cursor="Hand"
                SelectedIndex="0"
                ToolTip.Tip="Select a language for transcription">

                <ComboBoxItem Content="English"/>
                <ComboBoxItem Content="French"/>
                <ComboBoxItem Content="German"/>
                <ComboBoxItem Content="Japanese"/>
                <ComboBoxItem Content="Spanish"/>
            </ComboBox>
        </Grid>

        <Grid 
            Grid.Row="3"
            Margin="40,10,40,30"
            Background="rgb(0,0,0)"
            MinHeight="180">
            <DockPanel LastChildFill="True">

                <TextBlock 
                    Text="Terminal log" 
                    Background="rgb(30,30,30)"
                    Foreground="rgb(255,255,255)"
                    FontSize="14"
                    FontFamily="Consolas"
                    Padding="10,10,0,5"
                    DockPanel.Dock="Top"/>

                <Border
                    BorderBrush="rgb(80,80,80)"
                    BorderThickness="1"
                    CornerRadius="4">
                    <TextBox 
                        x:Name="TerminalLogTextBox"
                        Background="Transparent"
                        BorderThickness="0"
                        IsReadOnly="True"
                        Foreground="rgb(200,200,200)"
                        FontFamily="Consolas"
                        Padding="10,5,10,10"
                        Margin="0"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        AcceptsReturn="True"/>
                </Border>

            </DockPanel>
        </Grid>
    </Grid>
</UserControl>